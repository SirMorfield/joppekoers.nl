{
	"tabWidth": 4,
	"useTabs": true,
	"printWidth": 120,
	"semi": false,
	"singleQuote": true,
	"trailingComma": "all",
	"overrides": [
		{
			"files": ".prettierrc",
			"options": {
				"parser": "json"
			}
		},
		{
			"files": "*.svelte",
			"options": {
				"parser": "svelte"
			}
		}
	],
	"pluginSearchDirs": [
		"./"
	],
	"plugins": [
		"prettier-plugin-svelte"
	]
}
