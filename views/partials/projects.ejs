<script>
  function openPopup(files) {
    let options = {
      loop: false,
      bgOpacity: 0.98,
      showAnimationDuration: 0,
      hideAnimationDuration: 0,
      pinchToClose: false
    };

    let pswpElement = document.querySelectorAll('.pswp')[0];
    let gallery = new PhotoSwipe(pswpElement, PhotoSwipeUI_Default, files, options);
    gallery.init();
  }
</script>
